<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-4">
                <h2 class="mb-5 fw-bold">User Data</h2>
                <form action="/insertData" method="post">
                    <div class="input-group mb-3">
                        <span class="me-4 fw-bold">User ID :</span>
                        <input type="text" class="form-control border border-secondary rounded-2" id="UserId" name="UserId">
                    </div>
                    <div class="input-group mb-3">
                        <span class="me-4 fw-bold">Name :</span>
                        <input type="text" class="form-control border border-secondary rounded-2" id="Name" name="Name">
                    </div>
                    <div class="input-group mb-3">
                        <span class="me-4 fw-bold">Email :</span>
                        <input type="email" class="form-control border border-secondary rounded-2" id="Email" name="Email">
                    </div>
                    <div class="input-group mb-3">
                        <span class="me-4 fw-bold">Password :</span>
                        <input type="password" class="form-control border border-secondary rounded-2" id="Password" name="Password">
                    </div>
                    <div class="input-group mb-3">
                        <span class="me-4 fw-bold">Mobile :</span>
                        <input type="number" class="form-control border border-secondary rounded-2" id="Mobile" name="Mobile">
                    </div>
                    <div class="input-group mb-3">
                        <input type="Submit" class="for me-4m-control btn btn-primary fw-bold" value="Submit">
                    </div>
                </form>
            </div>
            <div class="col-8">
                <table class="table table-striped">
                    <thead>
                        <h2 class="mb-5 fw-bold">User Information</h2>
                        <tr>
                            <th scope="col">User ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">Mobile</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% User.forEach(function(val) { %>
                            <tr>
                                <td><%= val.UserId %></td>
                                <td><%= val.Name %></td>
                                <td><%= val.Email %></td>
                                <td><%= val.Password %></td>
                                <td><%= val.Mobile %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</html>
