<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category %></title>
    <link rel="icon" href="../public/img/Netflix_icon.svg.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-black text-light">
    <div class="container-fluid">
        <%- include('./partials/header.ejs') -%>
        <div class="row">
            <%- include('./partials/aside.ejs') -%>
            <div class="col-md-10 mt-5">
                <h1><%= category %></h1>
                <div class="row">
                    <div class="container">
                        <div class="row ms-5">
                            <% if (movies.length === 0) { %>
                                <p>No movies found in this category.</p>
                            <% } else { %>
                                <% movies.forEach(movie => { %>
                                    <div class="col-md-3 me-4 mb-3">
                                        <div class="card border-0 bg-dark text-light mb-3" data-bs-toggle="modal" data-bs-target="#movieModal<%= movie._id %>">
                                            <img src="<%= movie.Image %>" class="card-img-top" alt="Movie Image" height="470">
                                        </div>
                                    </div>
                                    <div class="modal fade" id="movieModal<%= movie._id %>" tabindex="-1" aria-labelledby="movieModalLabel<%= movie._id %>" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content bg-dark-custom text-light">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="movieModalLabel<%= movie._id %>"><%= movie.Name %></h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p><strong>Category:</strong> <%= movie.Category %></p>
                                                    <p><strong>Description:</strong><br><%= movie.Description %></p>
                                                    <p><strong>Rating:</strong> <%= movie.Rating %></p>
                                                </div>
                                                <div class="modal-footer">
                                                    <a href="/edit/<%= movie._id %>" class="btn btn-outline-light">Edit</a>
                                                    <form action="/delete/<%= movie._id %>" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-outline-light">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
